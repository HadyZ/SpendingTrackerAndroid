<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:textColor="@color/addTransaction"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_amount"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_name" />


    <ImageButton
        android:id="@+id/delete"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_below="@+id/t_name"

        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_delete" />

    <TextView
        android:id="@+id/t_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_name"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/addTransaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_type" />



</RelativeLayout>